<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task 3 | Sign Up</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="style.css">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>

</head>
<body class="gap-md-3" id="index">
    <section class="d-none d-md-block">
        <img class="d-none d-md-block" src="./icon.png" alt="social media image" width="500">
    </section>
    <section>

        <header>
            <i class="fa-solid fa-users mb-2"></i>
            <h2>Sign Up</h2>
            <p>Get started with Creating Account</p>
        </header>
        <form id="form" class="p-4 rounded" >
            <div id="signupname" class="name"> 
                <label for="name">Username</label>
                <input id="username" type="text" name="name" required> <br>
            </div>
            <div class="email">
                <label for="email">Email</label> 
                <input id="email" type="email" name="email" required><br> 
            </div>
            <div class="pass"> 
                <label for="password">Password</label> 
                <div class="relative">
                    <input class="w-full" id="password" type="password" name="password" minlength="6" required> <br>
                    <i id="eyeIcon" class=" fa-regular fa-eye-slash absolute right-2 top-2"></i>
                </div>
            </div>
            <p id="validator"> 
            </p> 
            <p id="indicator">password strength: <span id="strength"></span></p>
            <button id="submitbtn" class="subtn signup" type="submit">Sign Up</button>
            <div class="flex justify-center gap-1">
                <p id="logText" class="text-center">Already Have an Account?</p>
                <a href="/login"><span id="logChoice" class="text-cyan-700 inline-block">Login</span></a> 
            </div>

            <div class="google flex items-center justify-center border-[1px] rounded-lg border-white p-2">
                <a href="/auth/google" class="">
                    <div class="flex items-center justify-center gap-2">
                        <img src="./assets/googleicon.png" class="w-5 inline-block ml-3" alt="">
                        <span class="">Continue with Google</span>
                    </div>
                </a>
            </div>
        </form>        
          
    </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>
    <script>
        const pass = document.getElementById('password')
        const strength = document.getElementById('strength')
        const indicator = document.getElementById('indicator') 
        indicator.style.display = 'none'  

        pass.addEventListener('input',()=>{
            const password = pass.value
            const weakPass = /^.{0,5}$/;
            const mediumPass = /^(?=.*[a-zA-Z])(?=.*\d)[A-Za-z\d]{6,}$/;
            const strongPass = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&#^+=-])[A-Za-z\d@$!%*?&#^+=-]{8,}$/;
            indicator.style.display = 'block' 
            if(weakPass.test(password)){
                strength.innerText = "Weak"
                strength.style.color = 'red'
            }
            else if(mediumPass.test(password)){
                strength.innerText = "Medium"
                strength.style.color = 'yellow'
            }
            else if(strongPass.test(password)){
                strength.innerText = "strong"
                strength.style.color = 'green'
            } else{
                strength.innerText = "Weak"
                strength.style.color = 'red'
            }
        })
    </script>
    <script src="index.js"></script>
</body>
</html>